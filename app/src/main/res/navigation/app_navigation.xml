<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/topFragment">

    <fragment
        android:id="@+id/topFragment"
        android:name="com.example.listgames.fragment.MainFragment"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_topFragment_to_detailFragment"
            app:destination="@id/detailFragment" />

    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.listgames.fragment.DetailFragment"
        android:label="@string/nav_about_game"
        tools:layout="@layout/fragment_detail" />

</navigation>